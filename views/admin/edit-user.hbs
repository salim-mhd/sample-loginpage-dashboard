<!-- Section: Design Block -->
<section class="text-center">
  <!-- Background image -->
  <div class="p-5 bg-image" style="
        background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
        height: 300px;
        "></div>
  <!-- Background image -->

  <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
    <div class="card-body py-5 px-md-5">

      <div class="row d-flex justify-content-center">
        <div class="col-lg-8">
          <h2 class="fw-bold mb-5">Edit User Informations</h2>
          <form action="/admin/edituser/{{userinfo._id}}" method="post">
            <!-- 2 column grid layout with text inputs for the first and last names -->
            <div class="row d-flex justify-content-center">
              <div class="col-md-6 mb-4">
                <div class="form-outline">
                  <label class="form-label" for="form3Example1">Name</label>
                  <input type="text" required id="form3Example1" name="name" class="form-control" value="{{userinfo.name}}" />
                </div>
              </div>
            </div>

            <!-- Email input -->
            <div class="row d-flex justify-content-center">
            <div class="col-md-6 mb-4">
              <label class="form-label" for="form3Example3">Email address</label>
              <input type="email" id="form3Example3" required name="email" class="form-control" value="{{userinfo.email}}" />
            </div>
            </div>

            <!-- Password input -->
            {{!-- <div class="row d-flex justify-content-center">
            <div class="col-md-6 mb-4">
                <label class="form-label" for="form3Example4">Password</label>
              <input type="password" id="form3Example4" required name="password" class="form-control" value="{{userinfo.password}}" />
            </div>
            </div> --}}

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4 me-3">
              Update
            </button>
            <a href="/admin/back"><button type="button" class="btn btn-primary btn-block mb-4">
              Back
            </button></a>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
