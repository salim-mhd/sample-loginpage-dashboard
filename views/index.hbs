   {{!-- section --}}

    <section>
        <div class="container">
            <div class="row">

                {{#each products}}
                <div class="col-md-3 d-flex justify-content-center mt-5 text-center">
                    <div class="card" style="width: 18rem;">
                        <img src="{{this.img}}" class="card-img-top m-auto p-2" alt="..." style="width:10rem; height: 16rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">{{this.description}}</p>
                            <a href="#" class="btn btn-primary m-1">Add to Cart</a>
                            <a href="#" class="btn m-1" style="color:#ffff; background-color:green;">BUY NOW</a>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </section>